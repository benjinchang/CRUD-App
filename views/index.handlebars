<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="top-bar">
			<br>
			<h1 style="font-weight: bold;">Eat Da Burger!</h1>
			<br>
		</div>
		<div class="col-xs-6 text-center" class="task">
			<div class="row">
				<div class="panel panel-default">
					<div class="panel-body">
						<h3>Burgers that can be devoured</h3>
						{{#each burger_data}}
							{{#unless this.devoured}}
								<div class="row">
									<div class="col-xs-9 text-center">
										<pre> {{this.id}}. {{this.burger_name}}</pre>
									</div>
									<div class="col-xs-3 text-center">
										<form method="POST" action="/burgers/update?_method=PUT" class="button-size" style="line-height: 0px;">
											<input type="hidden" name="burger_id" type="text" value={{this.id}}>
											<br>
											<button type="sumbit" class="btn btn-default">Devour It!</button>
										</form>
									</div>
								</div>
							{{/unless}}
						{{/each}}
					</div>
				</div>
			</div>
		</div>

		<div class="col-xs-6 text-center" class="task">
			<div class="panel panel-default">
				<div class="panel-body">
					<h3>Burgers that have been devoured</h3>
					{{#each burger_data}}
						{{#if this.devoured}}
							<input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
						{{/if}}
					{{/each}}
				</div>
			</div>
		</div>

	</div>
</div>
<br>
<div class="container">
	<div class="row">
		<div class="col-xs-4 col-sm-offset-4 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" name="burger_name" class="form-control" value="" id="enter_text">
				<br>
				<button type="sumbit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
			<h3>Enter name of burger you would like to add!</h3>
		</div>
	</div>
</div>